<% layout('layouts/boilerplate') %>

  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    /* to make the filters scrollable */
    .filter-icons {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;

      gap: 2rem;
    }

    /* to hide the scrollbar */
    .filter-icons::-webkit-scrollbar {
      display: none;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .filter {
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.7;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .filter p {
      font-size: 0.8rem;
    }

    .tax-info {
      display: none;
      /* display: none doesnt occupy space */
      /* visibility: hidden keeps occupying the space; */
    }

    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.25rem;
      padding: 1rem;
      margin-right: 2rem;
      display: flex;
      align-items: center;
      ;
    }
  </style>
  <!-- <h3>All Listings</h3> -->
  <div id="filters">
    <div class="filter-icons">
      <div class="filter">
        <div class=""><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div class=""><i class="fa-solid fa-city"></i></div>
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <div class=""><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div class=""><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div class=""><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div class=""><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
      </div>
      <div class="filter">
        <div class=""><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div class=""><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div class=""><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div class=""><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="filter">
        <div class=""><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  </div>

  <div class="container mt-3">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% for (let listing of allListings) { %>
        <div class="card col listing-cards">
          <a href="/listings/<%=listing._id%>" class="listing-link">

            <div class="cards col h-100">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image" style="height:20rem">
              <!-- <div class="card-img-overlay">abcd</div> -->

              <div class="card-body">
                <h5 class="card-title"><b>
                    <%= listing.title %>
                  </b></h5>
                <p class="card-text">
                  &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                    <i class="tax-info">&nbsp; &nbsp; +18%GST</i>
                </p>
                <!-- <a href="/listings/" class="btn btn-primary">View Details</a> -->
              </div>
            </div>
          </a>
        </div>
        <% } %>
    </div>
  </div>

  <script>
    let taxToggle = document.getElementById('switchCheckDefault');
    taxToggle.addEventListener("click", () => {
      let taxInfo = document.querySelectorAll('.tax-info');
      // taxInfo.style.display="block";
      for (info of taxInfo) {
        if (taxToggle.checked) {
          info.style.display = "inline";
        }
        else {
          info.style.display = "none";
        }
      }
    })
  </script>